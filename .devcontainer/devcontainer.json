{
  // Name configuration
  "name": "Codespace for Skills!",
  // Use base codespace image
  "image": "mcr.microsoft.com/vscode/devcontainers/universal:latest",

  "remoteUser": "codespace",
  "overrideComamand": false,
  // Add the IDs of extensions to install upon creation
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot"
      ]
    },
    "codespaces": {
      "openFiles": [
        "codespace.md"
      ]
    }
  },
  "postCreateCommand": "echo '# Writing code upon codespace creation!' >> codespace.md"
}
